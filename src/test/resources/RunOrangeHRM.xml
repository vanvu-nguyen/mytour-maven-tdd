<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="OrangeHRM" parallel="none">

    <listeners>
        <listener class-name="commons.MethodListener"/>
        <listener class-name="reportConfig.ExtentTestListener"/>
    </listeners>

    <parameter name="url" value="http://localhost/orangehrm5/"/>

    <test verbose="2" preserve-order="true" name="Run on Firefox">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="adminSite.pim.PIM_01_Employee"/>
        </classes>
    </test>

    <test verbose="2" preserve-order="true" name="Run on Chrome">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="adminSite.pim.PIM_01_Employee"/>
        </classes>
    </test>

    <test verbose="2" preserve-order="true" name="Run on Edge">
        <parameter name="browser" value="edge"/>
        <classes>
            <class name="adminSite.pim.PIM_01_Employee"/>
        </classes>
    </test>

</suite>